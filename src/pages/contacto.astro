<style>
  .hero-section {
    width: 100%;
    padding: 3rem 0;
    background-color: var(--celeste-suave);
    color: var(--gris-oscuro);
    text-align: center;
  }

  .hero-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .hero-title {
    font-size: 2.5rem;
    font-weight: bold;
    letter-spacing: -0.025em;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.12);
  }

  .hero-description {
    max-width: 56.25rem;
    margin: 0 auto;
    font-size: 1.125rem;
    background-color: rgba(224, 242, 254, 0.8);
    padding: 1rem;
    border-radius: 0.5rem;
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
  }

  .contact-form-section {
    width: 100%;
    padding: 3rem 0;
    background-color: var(--beige-claro);
    color: var(--gris-oscuro);
  }

  .story-section {
    width: 100%;
    padding: 3rem 0;
    background-color: var(--celeste-suave);
    color: var(--gris-oscuro);
  }

  .email-section {
    width: 100%;
    padding: 3rem 0;
    background-color: var(--beige-claro);
    color: var(--gris-oscuro);
  }

  .container {
    max-width: 48rem;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .container-small {
    max-width: 32rem;
    margin: 0 auto;
    padding: 0 1rem;
    text-align: center;
  }

  .card {
    background-color: var(--celeste-suave);
    border: 1px solid var(--gris-oscuro);
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    border-radius: 0.5rem;
    padding: 1.5rem;
  }

  .story-card {
    background-color: var(--beige-claro);
  }

  .email-card {
    background-color: var(--celeste-suave);
  }

  .card-header {
    text-align: center;
    margin-bottom: 1.5rem;
  }

  .card-title {
    font-size: 1.875rem;
    font-weight: bold;
    color: var(--verde-musgo);
    margin-bottom: 0.5rem;
  }

  .card-description {
    color: rgba(55, 65, 81, 0.8); 
  }

  .contact-form {
    display: grid;
    gap: 1.5rem;
  }

  .form-group {
    display: grid;
    gap: 0.5rem;
  }

  .form-label {
    font-size: 0.875rem;
    font-weight: 500;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .required {
    color: #ef4444;
  }

  .form-input,
  .form-select {
    padding: 0.5rem 0.75rem;
    border: 1px solid #d1d5db;
    border-radius: 0.375rem;
    font-size: 1rem;
    background-color: white;
    transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
  }

  .form-input:focus,
  .form-select:focus {
    outline: none;
    border-color: var(--verde-musgo);
    box-shadow: 0 0 0 3px rgba(79, 121, 66, 0.1);
  }

  .form-textarea {
    padding: 0.5rem 0.75rem;
    border: 1px solid #d1d5db;
    border-radius: 0.375rem;
    font-size: 1rem;
    background-color: white;
    min-height: 120px;
    resize: vertical;
    font-family: inherit;
    transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
  }

  .form-textarea:focus {
    outline: none;
    border-color: var(--verde-musgo);
    box-shadow: 0 0 0 3px rgba(79, 121, 66, 0.1);
  }

  .submit-btn,
  .story-btn {
    background-color: var(--amarillo-suave);
    color: var(--gris-oscuro);
    border: none;
    padding: 0.75rem 1.5rem;
    border-radius: 0.375rem;
    font-size: 1rem;
    font-weight: 500;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    transition: background-color 0.15s ease-in-out;
  }

  .submit-btn:hover,
  .story-btn:hover {
    background-color: rgba(254, 243, 199, 0.9);
  }

  .icon {
    width: 1rem;
    height: 1rem;
    flex-shrink: 0;
  }

  .icon.green {
    color: var(--verde-musgo);
    width: 1.25rem;
    height: 1.25rem;
  }

  .email-icon {
    width: 4rem;
    height: 4rem;
    color: var(--verde-musgo);
    margin-bottom: 1rem;
  }

  .privacy-note {
    font-size: 0.875rem;
    color: rgba(55, 65, 81, 0.7);
    margin-top: 1rem;
    text-align: center;
  }

  .privacy-icon {
    font-weight: 600;
  }

  .story-intro {
    font-size: 1.125rem;
    margin-bottom: 1rem;
  }

  .story-list {
    list-style: none;
    margin-bottom: 1rem;
  }

  .story-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.5rem;
    font-size: 1.125rem;
  }

  .story-highlight {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 1rem 0;
  }

  .email-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }

  .email-link {
    font-size: 1.5rem;
    font-weight: bold;
    color: var(--gris-oscuro);
    text-decoration: none;
    transition: color 0.2s ease-in-out;
  }

  .email-link:hover {
    color: var(--amarillo-suave);
    mix-blend-mode: multiply;
  }

  @media (min-width: 768px) {
    .hero-section {
      padding: 6rem 0;
    }

    .hero-title {
      font-size: 3.75rem;
    }

    .hero-description {
      font-size: 1.25rem;
    }

    .contact-form-section,
    .story-section,
    .email-section {
      padding: 6rem 0;
    }

    .container {
      padding: 0 1.5rem;
    }

    .email-link {
      font-size: 1.875rem;
    }
  }

  @media (min-width: 1024px) {
    .hero-section {
      padding: 8rem 0;
    }

    .hero-title {
      font-size: 4.5rem;
    }

    .hero-description {
      font-size: 1.5rem;
    }

    .contact-form-section,
    .story-section,
    .email-section {
      padding: 8rem 0;
    }

    .email-link {
      font-size: 1.875rem;
    }
  }

  @media (min-width: 1280px) {
    .hero-title {
      font-size: 4.5rem;
    }
  }
</style>